
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Simple App</title>
    <link rel="stylesheet" href="~/Content/styles.css" />
    <script src="~/Content/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="~/Content/lodash.min.js" type="text/javascript"></script>
</head>
<body>
    <div class="main-container">
        <div class="top-container" align="center">
            <form>
                <input type="text" name="message" placeholder="Ваше сообщение" class="input-msg"/>
                <input type="button" value="Отправить" class="input-btn"/>
            </form>
        </div>
        <div class="messages-container">
            <div id="last-messages">
                <h1 align="center"> 20 последних сообщений: </h1>
            </div>
            <div id="user-messages">
                <h1 align="center"> 10 ваших последних сообщений: </h1>
            </div>
        </div>
    </div>
    <script src="~/Content/app.js" type="text/javascript"></script>
</body>
</html>
